<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="unizik_quickledger_position_tree">
      <field name="name">Position</field>
      <field name="model">quickledger.position</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

  <record id="unizik_quickledger_position_form" model="ir.ui.view">
     <field name="name">Positions</field>
     <field name="model">quickledger.position</field>
     <field name="arch" type="xml">
        <form string="Position" delete="false" duplicate="0">
            <sheet>
                 <group colspan="4">
                      <field name="name"/>
                      <field name="description"/>
                </group>
                 <notebook>
                            <page name="public" string="Entries">
                                <group>
                                    <field name="entry_ids" nolabel="1">
                                        <tree editable="bottom">
                                            <field name="entry_date"/>
                                            <field name="name"/>
                                            <field name="department_id"/>
                                            <field name="faculty_id"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                            
                        </notebook>
            </sheet>
        </form>
     </field>
 </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="unizik_quickledger_positions_action_window">
      <field name="name">Positions</field>
      <field name="res_model">quickledger.position</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>






