        <record id="unizik_student_result_view_search" model="ir.ui.view">
            <field name="name">student.result.search</field>
            <field name="model">student.result</field>
            <field name="arch" type="xml">
                 <search string="Search Student Result">
                    <field name="student_id" string="Name" filter_domain="['|',('student_id.name','ilike', self),('student_id.surname','ilike', self)]"/>
                    <field name="student_id" string="Matriculation Number" filter_domain="[('student_id.matriculation_number','like', self)]"/>
                    <field name="student_id" string="Application Number" filter_domain="[('student_id.application_number','like', self)]"/>
                    <field name="honours_id" string="Honours"/>
                </search>
            </field>
        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="unizik_student_results_action_window">
