<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_student_ledger_detail">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                   <h5>
                        <span t-field="docs.student_id.name"/>
                        <span t-field="docs.student_id.matriculation_number"/>
                   </h5>
                    <div class="row mt32 mb32" id="informations">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Programme:</strong>
                            <p class="m-0" t-field="docs.student_id.programme_id.name"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Previous Balance:</strong>
                            <p class="m-0" t-field="docs.balance_brought_forward"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Amount Due:</strong>
                            <p class="m-0" t-field="docs.total_amount_due"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Amount Paid:</strong>
                            <p class="m-0" t-field="docs.total_amount_paid"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Current Balance:</strong>
                            <p class="m-0" t-field="docs.total_balance"/>
                        </div>
                    </div>
                      <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Session</th>
                                <th>Fee/Charge</th>
                                <th>Level</th>
                                <th>Amount Due</th>
                                <th>Amount Paid</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs.outstanding_fee_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span t-field="line.session_id.code"/>
                                    </td>
                                    <td>
                                        <span t-field="line.fee_id.type_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.level_id.name"/>
                                    </td>
                                    <td>
                                        <span t-field="line.amount_due"/>
                                    </td>
                                    <td>
                                        <span t-field="line.amount_paid"/>
                                    </td>
                                    <td>
                                        <span t-field="line.balance"/>
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <strong>
                                        <span t-esc="sum([line.total_amount_due for line in docs]) or 0.0" t-options='{"widget": "monetary", "display_currency": docs.currency_id}'/>
                                    </strong>
                                </td>
                                <td>
                                    <strong>
                                        <span t-esc="sum([line.total_amount_paid for line in docs]) or 0.0" t-options='{"widget": "monetary", "display_currency": docs.currency_id}'/>
                                    </strong>
                                </td>
                                <td>
                                    <strong>
                                        <span t-esc="sum([line.total_balance for line in docs]) or 0.0" t-options='{"widget": "monetary", "display_currency": docs.currency_id}'/>
                                    </strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>



