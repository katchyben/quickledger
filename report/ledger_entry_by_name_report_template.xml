<?xml version="1.0" encoding="utf-8"?>
<!-- Translatable template -->
<odoo>
  <template id="report_ledger_entry_by_name">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <div class="font">
                    <div class="page">
                        <br/>
                        <br/>
                        <div class="text-center">
                            <h3>
                                <strong>Fees/Charges Reports</strong>
                            </h3>
                        </div>
                        <br></br>
                        <table class="table">
                            <thead>
                                <th>Name</th>
                                <th>Reg. Number</th>
                                <th>Department</th>
                                <th>Amount Due</th>
                                <th>Amount Paid</th>
                                <th>Balance</th>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td>
                                            <span t-raw="doc.student_id.name"/>
                                        </td>
                                        <td>
                                            <span t-raw="doc.student_id.matriculation_number"/>
                                        </td>
                                        <td>
                                            <span t-raw="doc.department_id.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="doc.amount_due"/>
                                        </td>
                                        <td>
                                            <span t-esc="doc.amount_paid"/>
                                        </td>
                                        <td>
                                            <span t-esc="doc.balance"/>
                                        </td>
                                        
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
        </t>
    </t>
  </template>
</odoo>